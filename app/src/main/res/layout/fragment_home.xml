<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.HomeFragment">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/search_query"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no" tools:targetApi="o"
            tools:ignore="LabelFor" app:layout_constraintHorizontal_bias="1.0"
            tools:layout_editor_absoluteY="266dp"/>
    <Button
            android:text="@string/search"
            android:backgroundTint="#1976D2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SearchButton"
            android:id="@+id/search" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/search_query" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.125"/>

</androidx.constraintlayout.widget.ConstraintLayout>
